{
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 80,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.md",
      "options": {
        "proseWrap": "always",
        "embeddedLanguageFormatting": "auto"
      }
    },
    {
      "files": "*.{yaml,yml}",
      "options": {
        "singleQuote": true
      }
    }
  ]
}
