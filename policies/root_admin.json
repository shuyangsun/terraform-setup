{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ManageAdminPolicies",
            "Effect": "Allow",
            "Action": [
                "iam:GetPolicy",
                "iam:ListPolicyVersions",
                "iam:CreatePolicy",
                "iam:GetPolicyVersion",
                "iam:CreatePolicyVersion",
                "iam:DeletePolicyVersion",
                "iam:DeletePolicy"
            ],
            "Resource": ["arn:aws:iam::*:policy/terraform/TerraformAdmin*"]
        }
    ]
}
